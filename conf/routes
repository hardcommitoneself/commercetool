# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Untrail url
GET         /*path/                                            @com.commercetools.sunrise.common.controllers.ApplicationController.untrail(path: String)

# Main entry point that decides whether to go to home page or to setup wizard
GET         /                                                  @com.commercetools.sunrise.common.controllers.ApplicationController.index()

->          /setup                                             setupwidget.Routes


# ADMIN
# ~~~~~

# Shows the deployed version, artifactId and GIT SHA
GET         /version                                           @com.commercetools.sunrise.common.controllers.StatusController.version()
# Shows if the application is healthy
GET         /health                                            @com.commercetools.sunrise.common.controllers.StatusController.health()

# Endpoint to manually refresh category tree (otherwise an app restart is required)
GET         /categories/refresh                                @com.commercetools.sunrise.common.inject.categorytree.CategoriesRefreshController.refresh()


# WEB ASSETS
# ~~~~~

# Map static favicon.ico from WebJars to root folder
GET         /favicon.ico                                       controllers.WebJarAssets.at(file="img/favicon.ico")
# Map static resources from the /public folder to the /assets/public URL path
GET         /assets/public/*file                               controllers.Assets.at(path="/public", file)
# Map static resources from WebJars (only CSS, JS, fonts and images) to the /assets URL path
GET         /assets/$file<(css|js|fonts|img)/.*>               controllers.WebJarAssets.at(file)


# HOME
# ~~~~~

# Home page
GET         /:languageTag/home                                 @wedecidelater.HomePageController.show(languageTag: String)


# LOCATION
# ~~~~~

# Changes the language of the app
POST        /changeLanguage                                    @com.commercetools.sunrise.common.controllers.ApplicationController.changeLanguage()
# Changes the country of the app
POST        /:languageTag/changeCountry                        @com.commercetools.sunrise.common.controllers.ApplicationController.changeCountry(languageTag: String)


# CART
# ~~~~~

# Shows the details of the cart belonging to the current session
GET         /:languageTag/cart                                 @com.commercetools.sunrise.shoppingcart.cartdetail.CartDetailPageController.show(languageTag: String)
# Adds the selected product to the cart
POST        /:languageTag/cart/add                             @com.commercetools.sunrise.shoppingcart.cartdetail.CartDetailPageController.addProductToCart(languageTag: String)
# Changes the quantity of a selected line item from the cart of the current session
POST        /:languageTag/cart/quantity                        @com.commercetools.sunrise.shoppingcart.cartdetail.CartDetailPageController.changeLineItemQuantity(languageTag: String)
# Removes a selected line item from the cart of the current session
POST        /:languageTag/cart/remove                          @com.commercetools.sunrise.shoppingcart.cartdetail.CartDetailPageController.removeLineItem(languageTag: String)


# CHECKOUT
# ~~~~~

# Shows the form to enter shipping address and billing address
GET         /:languageTag/checkout/address                     @wedecidelater.CheckoutAddressPageController.show(languageTag: String)
# Processes the form of the shipping address and billing address
POST        /:languageTag/checkout/address                     @wedecidelater.CheckoutAddressPageController.process(languageTag: String)
# Shows the form to enter shipping address and billing address
GET         /:languageTag/checkout/shipping                    @com.commercetools.sunrise.shoppingcart.checkout.shipping.CheckoutShippingPageController.show(languageTag: String)
# Processes the form of the shipping address and billing address
POST        /:languageTag/checkout/shipping                    @com.commercetools.sunrise.shoppingcart.checkout.shipping.CheckoutShippingPageController.process(languageTag: String)
# Shows a form to select the payment method
GET         /:languageTag/checkout/payment                     @com.commercetools.sunrise.shoppingcart.checkout.payment.CheckoutPaymentPageController.show(languageTag: String)
# Processes the form for selecting a payment method
POST        /:languageTag/checkout/payment                     @com.commercetools.sunrise.shoppingcart.checkout.payment.CheckoutPaymentPageController.process(languageTag: String)
# Shows the form to create an order out of the cart of the session
GET         /:languageTag/checkout/confirmation                @com.commercetools.sunrise.shoppingcart.checkout.confirmation.CheckoutConfirmationPageController.show(languageTag: String)
# Processes the order creation
POST        /:languageTag/checkout/confirmation                @com.commercetools.sunrise.shoppingcart.checkout.confirmation.CheckoutConfirmationPageController.process(languageTag: String)
# Shows the customer a confirmation for the created order
GET         /:languageTag/checkout/thankyou                    @com.commercetools.sunrise.shoppingcart.checkout.thankyou.CheckoutThankYouPageController.show(languageTag: String)


# SIGN UP/IN/OUT
# ~~~~~

# Shows log in form
GET         /:languageTag/user/login                           @wedecidelater.LogInPageController.show(languageTag: String)
# Logs in the user
POST        /:languageTag/user/login                           @wedecidelater.LogInPageController.processLogIn(languageTag: String)
# Signs up the user
POST        /:languageTag/user/signup                          @wedecidelater.LogInPageController.processSignUp(languageTag: String)
# Logs out the user
GET         /:languageTag/user/logout                          @wedecidelater.LogInPageController.processLogOut(languageTag: String)


# MY ACCOUNT
# ~~~~~

# Shows a form for updating the customer's details
GET         /:languageTag/user/details                         @wedecidelater.MyPersonalDetailsPageController.show(languageTag: String)
# Processes the form for updating the customer's details
POST        /:languageTag/user/details                         @wedecidelater.MyPersonalDetailsPageController.process(languageTag: String)
# Shows all orders from the customer
GET         /:languageTag/user/orders                          @wedecidelater.MyOrdersPageController.list(languageTag: String, page: Int ?= 1)
# Show an order from the customer
GET         /:languageTag/user/orders/:orderNumber             @wedecidelater.MyOrdersPageController.show(languageTag: String, orderNumber: String)


# PRODUCT DETAIL
# ~~~~~

# Shows the product detail page
GET         /:languageTag/:productSlug-$sku<[^-]+>.html        @com.commercetools.sunrise.productcatalog.productdetail.ProductDetailPageController.showProductBySlugAndSku(languageTag: String, productSlug: String, sku: String)
# TODO framework remove this route
GET         /:languageTag/:productId/:variantId                @com.commercetools.sunrise.productcatalog.productdetail.ProductDetailPageController.showProductByProductIdAndVariantId(languageTag: String, productId: String, variantId: Int)


# PRODUCT OVERVIEW
# ~~~~~

# Shows the search results page
GET         /:languageTag/search                               @com.commercetools.sunrise.productcatalog.productoverview.ProductOverviewPageController.searchProductsBySearchTerm(languageTag: String)
# Shows the product overview page for this category
GET         /:languageTag/:categorySlug                        @com.commercetools.sunrise.productcatalog.productoverview.ProductOverviewPageController.searchProductsByCategorySlug(languageTag: String, categorySlug: String)